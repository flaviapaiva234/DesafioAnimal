<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.CadastrarFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/containerToolbarFragmantCadastrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">


        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbarHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:elevation="25dp"
            app:title="Cadastrar"
            app:titleCentered="true"
            app:titleTextColor="@color/Blue_dark_blue" />

    </com.google.android.material.appbar.AppBarLayout>

    <EditText
        android:id="@+id/etNome"
        style="@style/btnEntrada"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nome"
        android:layout_marginStart="16dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="16dp"
        />

    <EditText
        android:id="@+id/etImagem"
        style="@style/btnEntrada"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Imagem"
        android:layout_marginStart="16dp"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="16dp"
        />

    <EditText
        android:id="@+id/etDescricao"
        style="@style/btnEntrada"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Descrição"
        android:layout_marginStart="16dp"
        android:layout_marginTop="210dp"
        android:layout_marginEnd="16dp"
        />

    <EditText
        android:id="@+id/etEspecie"
        style="@style/btnEntrada"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Especie"
        android:layout_marginStart="16dp"
        android:layout_marginTop="280dp"
        android:layout_marginEnd="16dp"
        />

    <EditText
        android:id="@+id/etIdade"
        style="@style/btnEntrada"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Idade"
        android:layout_marginStart="16dp"
        android:layout_marginTop="350dp"
        android:layout_marginEnd="16dp"
        />

    <TextView
        android:id="@+id/tvCampoPreencher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="420dp"
        android:text="@string/campo_a_preencher"
        android:textColor="@color/Wine"
        android:visibility="invisible"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnCadastar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="455dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/btn_cadastrar_theme"
        android:text="Cadastrar"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20sp"
        />

</FrameLayout>

